<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Widget.AppCompat.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:icon">@drawable/logo</item>
    </style>

    <style name="LoginTheme" parent="@style/AppTheme">
        <item name="android:keyTextColor">#0078FF</item>
        <item name="colorAccent">#0078FF</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#0078FF</item>
    </style>

</resources>
